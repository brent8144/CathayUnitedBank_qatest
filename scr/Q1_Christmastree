def draw_christmas_tree(leaf='', ornament='', height=""):
    for i in range(height):
        # 計算每一層需要的空格數，讓樹居中對齊
        spaces = ' ' * (height - i - 1)
        row = ''
        for j in range(i + 1):
            row += leaf
            if j < i:
                row += ornament
        print(spaces + row)

# leaf=''，ornament=''，height=
draw_christmas_tree('*', '0', 5)

